<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="bg-white rounded-lg shadow-lg border border-gray-200 p-8">
    <!-- Flash messages for feedback -->
    <% if notice %>
      <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-lg text-green-700">
        <%= notice %>
      </div>
    <% end %>

    <% if alert %>
      <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg text-red-700">
        <%= alert %>
      </div>
    <% end %>

    <div class="mb-6">
      <% if can? :manage, @article %>
        <%= link_to "← Back to My Articles", articles_path, class: "text-blue-600 hover:text-blue-800 font-medium" %>
      <% else %>
        <%= link_to "← Back to Home", root_path, class: "text-blue-600 hover:text-blue-800 font-medium" %>
      <% end %>
    </div>

    <div class="flex justify-between items-start mb-6">
      <div class="flex-1">
        <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @article.title %></h1>
        <div class="flex items-center space-x-4 text-sm text-gray-600">
          <span>By <%= @article.user.email %></span>
          <span>•</span>
          <span><%= @article.created_at.strftime("%B %d, %Y at %I:%M %p") %></span>
          <% if can? :manage, @article %>
            <span>•</span>
            <% if @article.status == 'draft' %>
              <span class="px-2 py-1 text-xs font-medium rounded-full bg-yellow-100 text-yellow-800">
                <%= @article.status.humanize %>
              </span>
            <% elsif @article.status == 'published' %>
              <span class="px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-800">
                <%= @article.status.humanize %>
              </span>
            <% elsif @article.status == 'deleted' %>
              <span class="px-2 py-1 text-xs font-medium rounded-full bg-red-100 text-red-800">
                <%= @article.status.humanize %>
              </span>
            <% end %>
          <% end %>
        </div>
      </div>

      <% if can? :manage, @article %>
        <div class="flex space-x-3 ml-6">
          <%= link_to "Edit", edit_article_path(@article),
              class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition duration-200" %>
          <%= button_to "Delete", article_path(@article),
              method: :delete,
              data: { turbo_confirm: "Are you sure you want to delete this article?" },
              class: "bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-lg transition duration-200" %>
        </div>
      <% end %>
    </div>

    <% if @article.image.attached? %>
      <div class="mt-4 mb-8">
        <%= image_tag @article.image, class: "w-full h-auto object-cover rounded-lg shadow-md" %>
      </div>
    <% end %>

    <div class="prose prose-lg max-w-none">
      <%= simple_format(@article.body, class: "text-gray-700 leading-relaxed") %>
    </div>

    <% if can? :manage, @article && @article.reports_count > 0 %>
      <div class="mt-6 pt-4 border-t border-gray-200">
        <div class="flex items-center text-gray-600">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-yellow-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
          <span>
            This article has been reported <%= pluralize(@article.reports_count, 'time') %>.
            <% if @article.reports_count >= 3 %>
              <span class="text-red-600 font-medium">This article will be automatically archived due to multiple reports.</span>
            <% end %>
          </span>
        </div>
      </div>
    <% end %>

    <% if current_user && current_user != @article.user && @article.status == 'published' %>
      <% user_already_reported = @article.reports.exists?(user: current_user) %>
      <div class="mt-8 pt-6 border-t border-gray-200">
        <% if user_already_reported %>
          <div class="text-gray-600 italic">
            You have already reported this article.
          </div>
        <% else %>
          <button id="reportArticleBtn" class="text-red-600 hover:text-red-800 font-medium flex items-center" type="button">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            Report this article
          </button>
        <% end %>
      </div>

      <% unless user_already_reported %>
        <!-- Report Modal -->
        <div id="reportModal" class="hidden fixed inset-0 bg-gray-500 bg-opacity-75 flex items-center justify-center p-4 z-50">
          <div class="bg-white rounded-lg max-w-lg w-full p-6 shadow-xl">
            <div class="flex justify-between items-center mb-4">
              <h3 class="text-lg font-bold text-gray-900">Report Article</h3>
              <button id="closeReportModal" type="button" class="text-gray-400 hover:text-gray-500">
                <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
              </button>
            </div>

            <%= form_with(model: [@article, Report.new], local: true, class: "space-y-4") do |form| %>
              <div>
                <%= form.label :reason, "Reason for reporting", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= form.text_area :reason, rows: 4, required: true,
                    class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                    placeholder: "Please explain why you're reporting this article" %>
              </div>

              <div class="flex justify-end space-x-3">
                <button id="cancelReport" type="button" class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 font-medium hover:bg-gray-50">
                  Cancel
                </button>
                <%= form.submit "Submit Report",
                    class: "px-4 py-2 bg-red-600 hover:bg-red-700 text-white font-medium rounded-lg" %>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Modal JavaScript -->
        <script>
          document.addEventListener('DOMContentLoaded', function() {
            const reportBtn = document.getElementById('reportArticleBtn');
            const modal = document.getElementById('reportModal');
            const closeBtn = document.getElementById('closeReportModal');
            const cancelBtn = document.getElementById('cancelReport');

            reportBtn.addEventListener('click', function() {
              modal.classList.remove('hidden');
            });

            function closeModal() {
              modal.classList.add('hidden');
            }

            closeBtn.addEventListener('click', closeModal);
            cancelBtn.addEventListener('click', closeModal);

            // Close modal when clicking outside of it
            modal.addEventListener('click', function(e) {
              if (e.target === modal) closeModal();
            });
          });
        </script>
      <% end %>
    <% end %>
  </div>
</div>
