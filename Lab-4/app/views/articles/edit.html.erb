<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="bg-white rounded-lg shadow-lg border border-gray-200 p-8">
    <div class="mb-6">
      <%= link_to "← Back to Article", article_path(@article), class: "text-blue-600 hover:text-blue-800 font-medium" %>
    </div>

    <h1 class="text-3xl font-bold text-gray-900 mb-8">Edit Article</h1>

    <%= form_with model: @article, local: true, class: "space-y-6" do |form| %>
      <% if @article.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <h3 class="text-red-800 font-medium mb-2">Please fix the following errors:</h3>
          <ul class="text-red-700 text-sm space-y-1">
            <% @article.errors.full_messages.each do |message| %>
              <li>• <%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :title,
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <%= form.label :body, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :body,
            rows: 15,
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <%= form.label :status, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :status,
            options_for_select([
              ['Draft', 'draft'],
              ['Published', 'published']
            ], @article.status),
            {},
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <%= form.label :image, "Article Image", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <% if @article.image.attached? %>
          <div class="mb-3">
            <p class="text-sm text-gray-600 mb-2">Current image:</p>
            <%= image_tag @article.image, class: "h-32 object-cover rounded-md shadow-sm border border-gray-300" %>
          </div>
        <% end %>
        <%= form.file_field :image,
            accept: "image/png,image/jpeg,image/jpg",
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div class="flex justify-end space-x-4">
        <%= link_to "Cancel", article_path(@article),
            class: "px-6 py-2 border border-gray-300 rounded-lg text-gray-700 font-medium hover:bg-gray-50 transition duration-200" %>
        <%= form.submit "Update Article",
            class: "px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition duration-200" %>
      </div>
    <% end %>
  </div>
</div>
